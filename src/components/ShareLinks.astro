---
import { SHARE_LINKS } from "@/constants";
import LinkButton from "./LinkButton.astro";

const URL = Astro.url;
---

<div class="flex items-center gap-1 text-sm">
  <span>Share this on:</span>
  <div>
    {
      SHARE_LINKS.map(social => (
        <LinkButton
          href={`${social.href + URL}`}
          class="scale-90 px-2 py-1 hover:rotate-6 sm:p-1"
          title={social.linkTitle}
        >
          <social.icon class="inline-block size-5 scale-125 fill-transparent stroke-current stroke-2 opacity-90 group-hover:fill-transparent sm:scale-110" />
          <span class="sr-only">{social.linkTitle}</span>
        </LinkButton>
      ))
    }
  </div>
</div>
